@using WebBanDoDienTu.Models
@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Product Listed"; // Thiết lập tiêu đề cho trang
}

<h3>@ViewData["Title"]</h3> <!-- Hiển thị tiêu đề trang -->
<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Add Product</a> <!-- Liên kết để thêm sản phẩm mới -->

<table class="table table-bordered">
    <!-- Tạo bảng có viền với Bootstrap -->
    <thead>
        <tr>
            <th scope="col">#</th> <!-- Số thứ tự -->
            <th scope="col">Product Name</th> <!-- Tên sản phẩm -->
            <th scope="col">Product Description</th> <!-- Mô tả sản phẩm -->
            <th scope="col">Product Price</th> <!-- Giá sản phẩm -->
            <th scope="col">Product Image</th> <!-- Hình ảnh sản phẩm -->
            <th scope="col">Product Slug</th> <!-- Slug sản phẩm -->
            <th scope="col">Product Category</th> <!-- Danh mục sản phẩm -->
            <th scope="col">Product Brand</th> <!-- Thương hiệu sản phẩm -->
            <th scope="col">Manage</th> <!-- Quản lý sản phẩm -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) // Lặp qua từng sản phẩm trong model
        {
            <tr>
                <th scope="row">@item.Id</th> <!-- Hiển thị ID sản phẩm -->
                <td>@item.Name</td> <!-- Hiển thị tên sản phẩm -->
                <td>@item.Description</td> <!-- Hiển thị mô tả sản phẩm -->
                <td>@item.Price.ToString("C0")</td> <!-- Hiển thị giá sản phẩm với định dạng tiền tệ -->
                <td><img src="~/media/products/@item.Image" width="120" alt="Image of @item.Name"></td> <!-- Hiển thị hình ảnh sản phẩm -->
                <td>@item.Slug</td> <!-- Hiển thị slug sản phẩm -->
                <td>@item.Category.Name</td> <!-- Hiển thị tên danh mục sản phẩm -->
                <td>@item.Brand.Name</td> <!-- Hiển thị tên thương hiệu sản phẩm -->
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-id="@item.Id">Edit</a> <!-- Liên kết để chỉnh sửa sản phẩm -->
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a> <!-- Liên kết để xóa sản phẩm kèm hộp thoại xác nhận -->
                </td>
            </tr>
        }
    </tbody>
</table>
